<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Url Shortener</title>
</head>
<body>
    <div class="container">
        <h1>URL Shortener</h1>
        <form action="/shortUrls" method="POST" style="display: flex;">            
            <input required placeholder="Url" type="url", name="originalUrl", id="originalUrl" class="mr-1 form-control col" style="margin: 5px;">
            <button type="submit" class="btn btn-primary" style="margin: 5px;">Shorten</button>
        </form>

        <h5 style="margin-top: 20px;">Recent Shortened URLs</h5>
        <table class="table table-striped table-responsive table-hover" >
            
            <thead>
                <tr>
                    <th scope="col">
                        Original URL
                    </th>
                    <th scope="col">
                        Shorten URL
                    </th>            
                </tr>
            </thead>        
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <td><a href="<%= shortUrl.originalUrl %>"><%= shortUrl.originalUrl %></a></td>
                        <td><a href="<%= shortUrl.shortUrl %>"><%= shortUrl.shortUrl %></a></td>
                    </tr>
                <% }) %>                
            </tbody>
        </table>
        
    </div>
</body>
</html>